#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
export DOTFILES=$HOME/.dotfiles

# Set OS X defaults
$DOTFILES/osx/set-defaults.sh

# Install homebrew
$DOTFILES/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
$DOTFILES/homebrew/update.sh 2>&1

# Cleanup homebrew
echo "› brew cleanup"
$DOTFILES/homebrew/cleanup.sh 2>&1

# Install software
echo "› $DOTFILES/script/install"
$DOTFILES/script/install

# backup prefs for apps that don't have sync
$DOTFILES/script/backup